@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Stream.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h2 class="mb-4">Delete User</h2>

    <h4>Are you sure you want to delete the following user?</h4>

    <div class="card mb-4">
        <div class="card-header">
            User Information
        </div>
        <div class="card-body">
            <p><strong>Username:</strong> @Model.Username</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <form method="post">
            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        </form>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
</div>
    