@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Stream.ViewModels.ViewModels.LibraryViewModel

@{
    ViewData["Title"] = "Dodaj grę do biblioteki użytkownika";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Libraries.FirstOrDefault()!.UserId" class="control-label">Użytkownik</label>
        <select asp-for="Libraries.FirstOrDefault()!.UserId" class="form-control" asp-items="ViewBag.Users"></select>
        <span asp-validation-for="Libraries.FirstOrDefault()!.UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Libraries.FirstOrDefault()!.GameId" class="control-label">Gra</label>
        <select asp-for="Libraries.FirstOrDefault()!.GameId" class="form-control" asp-items="ViewBag.Games"></select>
        <span asp-validation-for="Libraries.FirstOrDefault()!.GameId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Libraries.FirstOrDefault()!.Status" class="control-label">Status</label>
        <select asp-for="Libraries.FirstOrDefault()!.Status" class="form-control" asp-items="Html.GetEnumSelectList<Stream.Models.Status>()"></select>
        <span asp-validation-for="Libraries.FirstOrDefault()!.Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary" />
    </div>
</form>