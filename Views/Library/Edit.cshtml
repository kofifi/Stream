@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Stream.ViewModels.ViewModels.LibraryViewModel

@{
    ViewData["Title"] = "Edytuj bibliotekę";
}

<div class="container mt-4">
    <h2 class="mb-3">Edytuj bibliotekę</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Libraries.FirstOrDefault()!.Id" />

        <div class="form-group">
            <label class="control-label">Użytkownik</label>
            <input class="form-control" value="@Model.Libraries.FirstOrDefault()?.User?.Username" readonly />
        </div>

        <div class="form-group">
            <label class="control-label">Gra</label>
            <input class="form-control" value="@Model.Libraries.FirstOrDefault()?.Game?.Title" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Libraries.FirstOrDefault()!.Status" class="control-label">Status</label>
            <select asp-for="Libraries.FirstOrDefault()!.Status" class="form-control" asp-items="ViewBag.Status"></select>
            <span asp-validation-for="Libraries.FirstOrDefault()!.Status" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Zapisz" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Powrót</a>
        </div>
    </form>
</div>